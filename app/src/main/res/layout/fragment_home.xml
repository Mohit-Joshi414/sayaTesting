<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.SalonAtYourAbode.ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/home_zeroth_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_banner"
                    android:layout_width="match_parent"
                    android:layout_height="700dp"
                    android:src="@drawable/banner"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    app:srcCompat="@drawable/logo"
                    tools:ignore="ContentDescription" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp">
                    <TextView
                        android:id="@+id/text_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Salon Professional At Your Home"
                        android:textSize="30sp"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/playfair_display_black"/>

                    <TextView
                        android:id="@+id/text_home_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_home"
                        android:layout_margin="12dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:text="Professional Care"
                        android:textColor="#FFFFFF" />

                    <View
                        android:id="@+id/before"
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="25dp"
                        android:background="#BC9321"
                        android:layout_below="@id/text_home"
                        android:layout_toLeftOf="@id/text_home_1"
                        android:layout_toStartOf="@id/text_home_1" />

                    <View
                        android:id="@+id/after"
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="25dp"
                        android:background="#BC9321"
                        android:layout_below="@id/text_home"
                        android:layout_toRightOf="@id/text_home_1"
                        android:layout_toEndOf="@id/text_home_1" />
                </RelativeLayout>
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_first_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_below="@id/home_zeroth_block">

                <ImageView
                    android:id="@+id/home_banner_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="ContentDescription" />

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:padding="15dp"
                    app:layout_constraintTop_toTopOf="@id/home_banner_1"
                    app:layout_constraintBottom_toBottomOf="@id/home_banner_1"
                    app:layout_constraintLeft_toLeftOf="@id/home_banner_1"
                    app:layout_constraintRight_toRightOf="@id/home_banner_1">

                    <TextView
                        android:id="@+id/text_home_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:fontFamily="@font/playfair_display_black"
                        android:text="At your time..."
                        android:gravity="center_horizontal" />

                    <info.androidhive.fontawesome.FontTextView
                        android:id="@+id/clock_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_home_2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="@string/fa_clock"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/clock_icon"
                        android:layout_centerHorizontal="true"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:text="place order and wait for some minutes" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/text_home_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salon at your home"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_banner_1"
                    android:layout_marginStart="20dp" />
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_home_3">

                    <TextView
                        android:id="@+id/text_home_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp"
                        android:text="Experienced and Traditional Stylish Professionals"
                        android:fontFamily="@font/playfair_display"/>

                    <TextView
                        android:id="@+id/text_home_5"
                        android:layout_below="@id/text_home_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:text="Salon professionals at your home A-Z services for you." />

                    <TextView
                        android:layout_below="@id/text_home_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:text="Inspire employees and organizations to support causes they care about. We do this to bring more resources for the world that are changing our world." />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/home_second_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_below="@id/home_first_block">

                <ImageView
                    android:id="@+id/home_banner_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription" />

                <info.androidhive.fontawesome.FontTextView
                    android:id="@+id/scissors_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="@string/fa_cut_solid"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    app:solid_icon="true"/>

                <TextView
                    android:id="@+id/services"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="25sp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/playfair_display"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/scissors_icon"
                    android:text="Services" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/services"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@color/colorAccent" />

                <ListView
                    android:id="@+id/services_list"
                    android:layout_width="match_parent"
                    android:layout_height="1400dp"
                    android:layout_below="@id/services"
                    android:background="#FFF"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    tools:ignore="NestedScrolling" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>