<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="20dp">

    <ImageView
        android:id="@+id/home_service_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/img_2"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/home_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/home_service_image"
        android:layout_alignTop="@id/home_service_image"
        android:layout_marginRight="20dp"
        android:text="Hair Treatment"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:fontFamily="@font/playfair_display_black"
        android:layout_toEndOf="@id/home_service_image"
        android:layout_marginEnd="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:fontFamily="@font/playfair_display"
        android:text="Rs. 100-300"
        android:layout_below="@id/home_service_image"
        android:layout_marginStart="20dp" />
</RelativeLayout>
